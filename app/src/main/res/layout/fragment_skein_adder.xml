<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".skeinadder.SkeinAdderFragment">

    <data>

        <variable
            name="skeinAdderViewModel"
            type="android.jia.stitchworks.skeinadder.SkeinAdderViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/brand_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            android:text="DMC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/skein_seperator"
            app:layout_constraintHorizontal_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:paddingHorizontal="8dp"
            android:text="-"
            app:layout_constraintTop_toBottomOf="@+id/brand_selector"
            app:layout_constraintStart_toEndOf="@id/skein_start_inserter"
            app:layout_constraintEnd_toStartOf="@id/skein_end_inserter" />

        <EditText
            android:id="@+id/skein_start_inserter"
            app:layout_constraintHorizontal_weight="1"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="8dp"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/skein_seperator"
            app:layout_constraintTop_toBottomOf="@+id/brand_selector" />


        <EditText
            android:id="@+id/skein_end_inserter"
            app:layout_constraintHorizontal_weight="1"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/skein_seperator"
            app:layout_constraintTop_toBottomOf="@+id/brand_selector" />

        <com.google.android.material.slider.Slider
            android:id="@+id/skein_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:stepSize="1"
            android:valueFrom="0"
            android:valueTo="3"
            app:labelBehavior="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/skein_start_inserter" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            app:layout_constraintEnd_toStartOf="@id/undo_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/skein_selector_recycler" />

        <Button
            android:id="@+id/undo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/submit_button"
            app:layout_constraintTop_toBottomOf="@+id/skein_selector_recycler" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/skein_selector_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/skein_slider" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>